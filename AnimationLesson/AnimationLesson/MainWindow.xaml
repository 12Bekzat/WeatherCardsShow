<Window x:Class="AnimationLesson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimationLesson"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="canvas">
        <Rectangle x:Name="loadRectangle" Fill="Green" Width="30" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Click="Load" x:Name="loadButton" Content="Load" Margin="0,31,0,0" Height="20" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1"/>
        <ProgressBar HorizontalAlignment="Left" Height="20" IsIndeterminate="True" Margin="322,171,0,0" VerticalAlignment="Top" Width="100" Grid.Row="1"/>
    </Canvas>
</Window>
