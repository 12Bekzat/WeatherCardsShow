<Window x:Class="WeatherCards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherCards"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="250">
    <Grid KeyUp="EnterEvent">
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="340*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="searchCity" Grid.Row="0" Height="30" Width="200" Text="Введите город" FontSize="15" Padding="5 3.5 0 0" MouseDoubleClick="MouseGuidence"/>

        <ListBox Grid.Row="1" Grid.Column="0" Name="lbWeather">
            
        </ListBox>
    </Grid>
</Window>
